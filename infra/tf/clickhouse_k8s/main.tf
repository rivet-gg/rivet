resource "kubernetes_namespace" "clickhouse" {
	metadata {
		name = "clickhouse"
	}
}

resource "random_password" "default" {
	length = 32
	special = true
	min_special = 1
	override_special = "-_"  # DNS-safe spial characters
}

resource "helm_release" "clickhouse" {
	name = "clickhouse"
	namespace = kubernetes_namespace.clickhouse.metadata.0.name
	repository = "oci://registry-1.docker.io/bitnamicharts"
	chart = "clickhouse"
	version = "3.6.3"
	values = [yamlencode({
		global = {
			storageClass = var.k8s_storage_class
		}
		replicaCount = 1
		shards = 1
		zookeeper = {
			replicaCount = 1
		}
		auth = {
			username = "default"
			password = random_password.default.result
		}
		tls = {
			enabled = true
			autoGenerated = true
		}
	})]
}

data "kubernetes_config_map" "root_ca" {
	depends_on = [helm_release.clickhouse]

	metadata {
		name = "kube-root-ca.crt"
		namespace = kubernetes_namespace.clickhouse.metadata.0.name
	}
}

